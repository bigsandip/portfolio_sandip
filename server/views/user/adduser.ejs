<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/header.ejs %>
  </head>

  <br><br>
  <body id="page-top">
    <!-- Navigation-->
    <% include ../partials/navbar.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="nameTextField">Full name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter Full name"
            name="fullname"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">username</label>
          <input
            type="text"
            class="form-control"
            id="authorTextField"
            placeholder="Enter Username:"
            name="username"
            required
          />
        </div>

        <div class="from-group">
          <label for="publishedTextField">Date of Birth</label>
          <input
            type="date"
            class="form-control"
            id="publishedTextField"
            placeholder="Date of Birth"
            name="dob"
            required
          />
        </div>

        <div class="from-group">
          <label for="descTextField">Email</label>
          <input
            type="email"
            class="form-control"
            id="publishedTextField"
            placeholder="Email"
            name="email"
            required
          />
          </div>
        

          <button class="btn btn-primary" type="submit">
            <i class="fas fa-edit"></i>Submit
          </button>

       
        <a href="/users" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>
<%- include ../partials/footer.ejs %>
</body>
</html>
