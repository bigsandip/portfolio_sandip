




<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/header.ejs %>
  </head>
<br><br>
  <body id="page-top">
    <!--Navigation-->
    <% include ../partials/navbar.ejs %>
<!--service Grid Section-->
<section class="portfolio" id="portfolio">
   <div class="container"> 
       <h2 class="text-center text-uppercase text-secondary text-white  mb-0">
           Edit User
         </h2>
         <hr class="star-dark mb-5" />
         <div class="row">

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Full Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Full Name"
                    name="fullname" 
                    value="<%= user.fullname %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Username</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter username"
                    name="username" 
                    value="<%= user.username %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Email</label>
                    <input type="email" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter Email"
                    name="email" 
                    value="<%= user.email %>" required>
                </div>


                <div class="form-group">
                    <label for="publishedTextField">Date of Birth</label>
                    <input type="date" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter Date of Birth"
                    name="dob"
                    value="<%= user.dob %>" required>
                </div>

                    <br>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/users" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
         
        </div>

</div>
 </section>

     <!--Footer-->
     <% include ../partials/footer.ejs %>
   </body>
 </html>
 






